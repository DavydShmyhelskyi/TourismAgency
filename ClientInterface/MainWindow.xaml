<Window x:Class="ClientInterface.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ClientInterface"
        mc:Ignorable="d"
        Title="MainWindow" Height="335" Width="340">
    <Grid Margin="0,0,0,-6">
        <!-- Заголовок -->
        <TextBlock Text="Login to the Application"
            FontSize="20" FontWeight="Bold" Foreground="#000"
            HorizontalAlignment="Center" Margin="0,25,0,143"/>

        <TextBox 
            Width="250" 
            HorizontalAlignment="Center" 
            VerticalAlignment="Top" 
            Margin="0,85,0,0"
            x:Name="PhoneNumberTextBox"
            Text="Phone number" Height="30"/>
        <PasswordBox 
            Width="250" 
            HorizontalAlignment="Center" 
            VerticalAlignment="Top" 
            Margin="0,135,0,0"
            x:Name="PasswordBox" Height="30"/>
        <Button Content="Log in" 
            Width="200" Height="40" 
            HorizontalAlignment="Center" 
            VerticalAlignment="Top" 
            Margin="0,179,0,0" 
            Click="LoginButton_Click"/>
        <Button Content="Register" 
            Width="200" Height="40" 
            HorizontalAlignment="Center" 
            VerticalAlignment="Top" 
            Margin="0,230,0,0" 
            Click="RegisterButton_Click"/>

    </Grid>
</Window>
