<Window x:Class="ClientInterface.Tours"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ClientInterface"
        mc:Ignorable="d"
        Title="Tours" Height="450" Width="800">
    <Grid>
        <ListBox x:Name="ToursListBox" 
            Margin="0,56,0,23"
            FontSize="14"
            Background="#FFFFFF" 
            BorderBrush="#007ACC" 
            BorderThickness="1"
            SelectionChanged="ToursListBox_SelectionChanged" HorizontalAlignment="Center" Width="780"/>

        <TextBox x:Name="NameTextBox_Copy3" Margin="326,27,168,356"/>
        <Button Content="Search" Margin="640,27,10,356" FontSize="16" FontWeight="Bold" Background="#007ACC" Foreground="White" BorderThickness="0" Cursor="Hand" Click="SearchByNameButton_Click"/>
        <Button Content="Back" Margin="10,27,645,356" FontSize="16" FontWeight="Bold" Background="#007ACC" Foreground="White" BorderThickness="0" Cursor="Hand" Click="BackButton_Click"/>
        <Button Content="Make order" Margin="176,27,479,356" FontSize="16" FontWeight="Bold" Background="#007ACC" Foreground="White" BorderThickness="0" Cursor="Hand" Click="MakeOrderButton_Click"/>
    </Grid>
</Window>
