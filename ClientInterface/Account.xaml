<Window x:Class="ClientInterface.Account"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ClientInterface"
        mc:Ignorable="d"
        Title="Account" Height="794" Width="652">
    <Grid Margin="0,0,0,-6">
        <!-- Кнопки -->
        <Button Content="Change" Width="150"
            FontSize="16" FontWeight="Bold" Background="#007ACC" Foreground="White"
            BorderThickness="0" Cursor="Hand" Margin="166,704,0,10"
            HorizontalAlignment="Left" Click="ChangeButton_Click"/>

        <Button Content="Back" Width="150"
            FontSize="16" FontWeight="Bold" Background="Gray" Foreground="White"
            BorderThickness="0" Cursor="Hand" Margin="326,704,0,10"
            HorizontalAlignment="Left" Click="BackButton_Click"/>
        <TextBlock Text="*** Account ***" FontSize="24" FontWeight="Bold" HorizontalAlignment="Left" Margin="226,18,0,132"/>
        <TextBlock Text="Email" FontSize="14" Margin="76,58,396,132"/>
        <TextBox x:Name="Email" Margin="176,58,146,666"/>
        <TextBlock Text="Password" FontSize="14" Margin="76,118,396,132"/>
        <TextBox x:Name="Password" Margin="176,118,146,606"/>
        <TextBlock Text="First Name" FontSize="14" Margin="76,178,396,132"/>
        <TextBox x:Name="FirstName" Margin="176,178,146,546"/>
        <TextBlock Text="Last Name" FontSize="14" Margin="76,238,396,132"/>
        <TextBox x:Name="LastName" Margin="176,238,146,486"/>
        <TextBlock Text="Phone" FontSize="14" Margin="76,298,396,132"/>
        <TextBox x:Name="Phone" Margin="176,298,146,429"/>
        <TextBlock Text="Date of Birth" FontSize="14" Margin="76,358,396,132"/>
        <DatePicker x:Name="myDatePicker" Margin="176,355,146,366"/>
        <TextBlock Text="Address" FontSize="16" FontWeight="Bold" Margin="76,418,396,132"/>
        <TextBlock Text="Country" FontSize="14" Margin="76,448,396,132"/>
        <ComboBox x:Name="CountryComboBox" Margin="176,448,146,281"/>
        <TextBlock Text="City" FontSize="14" Margin="76,508,396,132"/>
        <TextBox x:Name="CityTextBox" Margin="176,508,146,221"/>
        <TextBlock Text="Street" FontSize="14" Margin="76,568,396,132"/>
        <TextBox x:Name="StreetTextBox" Margin="176,568,146,156"/>
        <TextBlock Text="Building" FontSize="14" Margin="76,628,431,40"/>
        <TextBox x:Name="BuildingTextBox" Margin="176,628,146,101"/>

    </Grid>
</Window>
