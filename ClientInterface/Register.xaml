<Window x:Class="ClientInterface.Register"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Register" Height="792" Width="500" ResizeMode="NoResize" WindowStartupLocation="CenterScreen">
    <Grid Margin="10,20,0,20">

        <!-- Поля реєстрації -->

        <!-- Поля адреси -->

        <!-- Кнопки -->
        <Button Content="Register" Width="150" Height="40"
                FontSize="16" FontWeight="Bold" Background="#007ACC" Foreground="White"
                BorderThickness="0" Cursor="Hand" Margin="10,680,0,0"
                HorizontalAlignment="Left" Click="RegisterButton_Click"/>

        <Button Content="Back" Width="150" Height="40"
                FontSize="16" FontWeight="Bold" Background="Gray" Foreground="White"
                BorderThickness="0" Cursor="Hand" Margin="170,680,0,0"
                HorizontalAlignment="Left" Click="BackButton_Click"/>
        <TextBlock Text="*** Register ***" FontSize="24" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,-6,0,108"/>
        <TextBlock Text="Email" FontSize="14" Margin="10,34,300,108"/>
        <TextBox x:Name="Email" Width="300" Margin="110,34,80,642"/>
        <TextBlock Text="Password" FontSize="14" Margin="10,94,300,108"/>
        <PasswordBox x:Name="Password" Width="300" Margin="110,94,80,582"/>
        <TextBlock Text="First Name" FontSize="14" Margin="10,154,300,108"/>
        <TextBox x:Name="FirstName" Width="300" Margin="110,154,80,522"/>
        <TextBlock Text="Last Name" FontSize="14" Margin="10,214,300,108"/>
        <TextBox x:Name="LastName" Width="300" Margin="110,214,80,462"/>
        <TextBlock Text="Phone" FontSize="14" Margin="10,274,300,108"/>
        <TextBox x:Name="Phone" Width="300" Margin="110,274,80,405"/>
        <TextBlock Text="Date of Birth" FontSize="14" Margin="10,334,300,108"/>
        <DatePicker x:Name="myDatePicker" Width="300" Margin="110,331,80,342"/>
        <TextBlock Text="Address" FontSize="16" FontWeight="Bold" Margin="10,394,300,108"/>
        <TextBlock Text="Country" FontSize="14" Margin="10,424,300,108"/>
        <ComboBox x:Name="CountryComboBox" Width="300" Margin="110,424,80,257"/>
        <TextBlock Text="City" FontSize="14" Margin="10,484,300,108"/>
        <TextBox x:Name="CityTextBox" Width="300" Margin="110,484,80,197"/>
        <TextBlock Text="Street" FontSize="14" Margin="10,544,300,108"/>
        <TextBox x:Name="StreetTextBox" Width="300" Margin="110,544,80,132"/>
        <TextBlock Text="Building" FontSize="14" Margin="10,604,0,16"/>
        <TextBox x:Name="BuildingTextBox" Width="300" Margin="110,604,80,77"/>
    </Grid>
</Window>
