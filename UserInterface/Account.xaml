<Window x:Class="UserInterface.Account"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:UserInterface"
        mc:Ignorable="d"
        Title="Account" Height="482" Width="800">
    <Grid>
        <!-- Поле для визначення -->
        <TextBlock Text="*** Account ***" FontSize="32" Margin="293,0,293,383" Foreground="Black"/>
        <!-- Поле для назви вордліста -->
        <TextBlock Text="Username" FontSize="14" Margin="247,43,247,369" Foreground="Black"/>
        <TextBox x:Name="Username" Height="30" Margin="247,65,247,339"/>
        <TextBlock Text="Password" FontSize="14" Margin="247,100,247,312" Foreground="Black"/>
        <TextBox x:Name="Password" Height="30" Margin="247,122,247,282"/>
        <TextBlock Text="Email" FontSize="14" Margin="247,157,247,255" Foreground="Black"/>
        <TextBox x:Name="Email" Height="30" Margin="247,178,247,226"/>
        <TextBlock Text="First name" FontSize="14" Margin="247,213,247,199" Foreground="Black"/>
        <TextBox x:Name="FirstName" Height="30" Margin="247,235,247,169"/>
        <TextBlock Text="Last name" FontSize="14" Margin="247,270,247,142" Foreground="Black"/>
        <TextBox x:Name="LastName" Height="30" Margin="247,292,247,112"/>
        <TextBlock Text="Phone" FontSize="14" Margin="247,330,247,82" Foreground="Black"/>
        <TextBox x:Name="Phone" Height="30" Margin="247,352,247,52"/>
        <Button Content="Apply Changes" Height="40" Margin="247,387,247,7" FontSize="16" FontWeight="Bold" Background="#007ACC" Foreground="White" BorderThickness="0" Cursor="Hand" Click="ApplyChangesButton_Click"/>
        <Button Content="Log out" Margin="26,357,611,23" FontSize="16" FontWeight="Bold" Background="#007ACC" Foreground="White" BorderThickness="0" Cursor="Hand" Click="LogOutButton_Click"/>
        <Button Content="Back" Margin="26,266,611,114" FontSize="16" FontWeight="Bold" Background="#007ACC" Foreground="White" BorderThickness="0" Cursor="Hand" Click="BackButton_Click"/>

    </Grid>
</Window>
