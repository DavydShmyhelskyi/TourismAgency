        mc:Ignorable="d"
        Title="Menu" Height="482" Width="800">
    <Grid Margin="1,0,-1,8">
        <!-- Поле для визначення -->
        <TextBlock Text="*** MENU ***" FontSize="32" Margin="294,10,294,373" Foreground="Black"/>
        <!-- Кнопка для додавання терміна -->
        <Button Name="SeedData" Content="Seed Data" Margin="252,70,252,318" FontSize="16" FontWeight="Bold" Background="#007ACC" Foreground="White" BorderThickness="0" Cursor="Hand" Click="SeedData_Click" Visibility="Collapsed" />
        <Button Content="Orderes" Margin="252,121,252,267" FontSize="16" FontWeight="Bold" Background="#007ACC" Foreground="White" BorderThickness="0" Cursor="Hand" Click="Orderes_Click"/>
        <Button Content="Contracts" Margin="252,172,252,216" FontSize="16" FontWeight="Bold" Background="#007ACC" Foreground="White" BorderThickness="0" Cursor="Hand" Click="Contracts_Click"/>
