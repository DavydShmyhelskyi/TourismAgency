        <Button Content="Tours" Margin="252,326,252,62" FontSize="16" FontWeight="Bold" Background="#007ACC" Foreground="White" BorderThickness="0" Cursor="Hand" Click="Tours_Click"/>
        <Button Name="ClientTechSupport" Content="Client Tech Support" Margin="252,377,252,11" FontSize="16" FontWeight="Bold" Background="#007ACC" Foreground="White" BorderThickness="0" Cursor="Hand" Click="Client_Click" Visibility="Collapsed" />
        <Button Content="Report" Margin="34,229,626,159" FontSize="16" FontWeight="Bold" Background="#007ACC" Foreground="White" BorderThickness="0" Cursor="Hand" Click="Report_Click"/>
    </Grid>
</Window>
