<Window x:Class="UserInterface.ThechSupport"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:UserInterface"
        mc:Ignorable="d"
        Title="ThechSupport" Height="482" Width="800">
    <Grid>
        <!-- Поле для визначення -->
        <!-- Поле для назви вордліста -->
        <TextBlock Text="Password" FontSize="14" Margin="10,34,484,378" Foreground="Black"/>
        <TextBox x:Name="Password" Height="30" Margin="10,56,484,348"/>
        <TextBlock Text="Email" FontSize="14" Margin="10,91,484,321" Foreground="Black"/>
        <TextBox x:Name="Email" Height="30" Margin="10,112,484,292"/>
        <TextBlock Text="First name" FontSize="14" Margin="10,147,484,265" Foreground="Black"/>
        <TextBox x:Name="FirstName" Height="30" Margin="10,169,484,235"/>
        <TextBlock Text="Last name" FontSize="14" Margin="10,204,484,208" Foreground="Black"/>
        <TextBox x:Name="LastName" Height="30" Margin="10,226,484,178"/>
        <TextBlock Text="Phone" FontSize="14" Margin="10,264,484,148" Foreground="Black"/>
        <TextBox x:Name="Phone" Height="30" Margin="10,286,484,118"/>
        <Button Content="Edit" Margin="483,379,167,27" FontSize="16" FontWeight="Bold" Background="#007ACC" Foreground="White" BorderThickness="0" Cursor="Hand" Click="EditButton_Click"/>
        <Button Content="Delete" Margin="326,379,324,27" FontSize="16" FontWeight="Bold" Background="#007ACC" Foreground="White" BorderThickness="0" Cursor="Hand" Click="DeleteButton_Click"/>
        <ListBox x:Name="TermListBox" 
         Margin="326,103,10,95"
         FontSize="14"
         Background="#FFFFFF" 
         BorderBrush="#007ACC" 
         BorderThickness="1"
         SelectionChanged="TermListBox_SelectionChanged"/>

        <TextBlock Text="Date of birtth" FontSize="14" Margin="10,321,484,91" Foreground="Black"/>
        <Button Content="Change address" Height="40" Margin="10,383,484,11" FontSize="16" FontWeight="Bold" Background="#007ACC" Foreground="White" BorderThickness="0" Cursor="Hand" Click="ChangeAddressButton_Click"/>
        <TextBox x:Name="FirsnNameSearch" Height="30" Margin="330,10,145,394"/>
        <TextBox x:Name="LastNameSearch" Height="30" Margin="330,45,145,359"/>
        <Button Content="Search" Margin="660,10,10,363" FontSize="16" FontWeight="Bold" Background="#007ACC" Foreground="White" BorderThickness="0" Cursor="Hand" Click="SearchClientButton_Click"/>
        <DatePicker Name="myDatePicker" SelectedDate="2025-02-11" Margin="10,348,484,72"/>
        <Button Content="Back" Margin="640,379,10,27" FontSize="16" FontWeight="Bold" Background="#007ACC" Foreground="White" BorderThickness="0" Cursor="Hand" Click="BackButton_Click"/>

    </Grid>
</Window>
