<Window x:Class="UserInterface.ChangeAddress"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:UserInterface"
        mc:Ignorable="d"
        Title="ChangeAddress" Height="380" Width="346">
    <Grid Margin="0,0,0,4">
        <!-- Поле для назви вордліста -->
        <TextBlock FontSize="14" Margin="20,10,20,278" Foreground="Black" Text="City"/>
        <TextBox x:Name="CityTextBox" Margin="20,32,20,278"/>

        <TextBlock Text="Country" FontSize="14" Margin="20,61,38,211" Foreground="Black"/>
        <ComboBox x:Name="CountryComboBox" Margin="20,87,20,222"/>

        <TextBlock Text="Street" FontSize="14" Margin="20,116,38,154" Foreground="Black"/>
        <TextBox x:Name="StreetTextBox" Margin="20,154,20,154"/>

        <TextBlock Text="Building" FontSize="14" Margin="20,187,20,90" Foreground="Black"/>
        <TextBox x:Name="BuildingTextBox" Margin="20,211,20,99"/>

        <Button Content="Edit" Margin="15,286,178,2" FontSize="16" FontWeight="Bold" Background="#007ACC" Foreground="White" BorderThickness="0" Cursor="Hand" Click="EditButton_Click"/>
        <Button Content="Back" Margin="173,286,20,2" FontSize="16" FontWeight="Bold" Background="#007ACC" Foreground="White" BorderThickness="0" Cursor="Hand" Click="BackButton_Click"/>
    </Grid>

</Window>
